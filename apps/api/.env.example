PORT=4001
DATABASE_URL=postgresql://localhost:5432/crm

# Service URLs for local development
SERVICE_API_URL=http://localhost:4001
SERVICE_GMAIL_URL=http://localhost:4002
SERVICE_ANALYSIS_URL=http://localhost:4003

# Better-Auth Configuration
BETTER_AUTH_SECRET=your-secret-key-minimum-32-characters-long
BETTER_AUTH_URL=http://localhost:4001
# WEB_URL: Frontend URL for OAuth redirects
# Local dev: http://localhost:4000
# Cloud Run: Set to your frontend Cloud Run URL or custom domain (e.g., https://web-service-xxx.run.app)
WEB_URL=http://localhost:4000

# Google OAuth Credentials (for better-auth Google SSO)
# Get these from: https://console.cloud.google.com/apis/credentials
# See docs/GOOGLE_OAUTH_SETUP.md for setup instructions
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret

# Optional: Dev mode (for testing without auth)
# ALLOW_DEV_AUTH=true
# DEV_TENANT_ID=your-tenant-id
# DEV_USER_ID=your-user-id

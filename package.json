{
  "name": "crm",
  "version": "1.0.0",
  "private": true,
  "description": "CRM TypeScript React monorepo with Drizzle, Hono, and Turbo",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "test": "turbo test",
    "lint": "turbo lint",
    "clean": "turbo clean && rm -rf node_modules",
    "oauth:setup": "tsx scripts/oauth-setup.ts",
    "test:gmail": "tsx scripts/test-gmail-integration.ts",
    "db:push": "cd packages/database && pnpm db:push"
  },
  "devDependencies": {
    "patch-package": "catalog:",
    "tsx": "^4.20.6",
    "turbo": "catalog:",
    "typescript": "catalog:"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.14.2",
  "dependencies": {
    "uuid": "^13.0.0"
  }
}
